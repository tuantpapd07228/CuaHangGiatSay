<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ServiceDetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="16dp"
                android:text="Giới Thiệu Dịch Vụ"
                android:textColor="@color/orange"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/servicedetail_back"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginTop="13dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/baseline_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="412dp"
                android:layout_height="501dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:background="@drawable/bgred"/>

            <ImageView
                android:id="@+id/servicedetail_img"
                android:layout_width="476dp"
                android:layout_height="393dp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:srcCompat="@drawable/giatsayimg"/>

            <androidx.cardview.widget.CardView
                android:layout_width="105dp"
                android:layout_height="32dp"
                android:layout_marginTop="348dp"
                android:backgroundTint="@color/orange"
                app:cardCornerRadius="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.088"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/servicedetail_img">

                <TextView
                    android:id="@+id/servicedetail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giặc Sấy"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/servicedetail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="60.000 đ"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/servicedetail_img" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Dịch vụ đang sale dưới 100k"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="0.918"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/servicedetail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:text="Sử dụng máy giặt sấy là dòng máy giặt được tích hợp 2 trong 1 làm sạch quần sao và tính năng sấy khô quần áo sau khi giặt." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/star"
                    android:textSize="17sp"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/servicedetail_sao"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    android:text="5.0" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:background="#C8C5C5"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="11sp"
                android:drawableStart="@drawable/iconcheck"
                android:text="  Giặt bằng nước giặt nhập khẩu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="11sp"
                android:drawableStart="@drawable/iconcheck"
                android:text="  Giặt bằng công nghệ Nhật." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="11sp"
                android:drawableStart="@drawable/iconcheck"
                android:text="  Tiết kiệm thòi gian hơn khi giặt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="11sp"
                android:layout_marginStart="5dp"
                android:drawableStart="@drawable/iconcheck"
                android:text="  Giao hàng tận nơi và tận tình." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="80dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:drawableStart="@drawable/iconcheck"
                android:text=" 2.4k đã đặt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/servicedetail_danhgia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/resource_background_button"
                android:layout_marginEnd="5dp"
                android:text="Xem đánh giá" />

            <androidx.appcompat.widget.AppCompatButton                android:id="@+id/servicedetail_addcart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/resource_background_button"
                android:text="Thêm vào giỏ hàng" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>
